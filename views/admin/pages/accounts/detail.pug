extends ../../layouts/default.pug
block main
    
    if (account.fullName)
        h1(class="mb-4") #{account.fullName}
    if (account.email)
        div(class="mb-4") Email: !{account.email}
    if (account.phone)
        div(class="mb-4") Phone: !{account.phone}
    if (account.avatar)
        div(class="mb-4")
        img(
            src=account.avatar
            style="width: 100px"
        )
    if (rolesName)
        div(class="mb-4") Phân quyền: !{rolesName}
    if (account.status)
        div(class="mb-4")
            span Trạng thái: 
            if (account.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/accounts/edit/${account.id}`
        ) Chỉnh sửa

    script(src="/admin/js/product.js")
